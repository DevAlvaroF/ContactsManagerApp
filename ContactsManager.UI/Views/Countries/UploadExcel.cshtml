@{
	ViewBag.Title = "Upload Countries from Excel";
}

<!-- BreadCrumbs -->
<div class="flex">

	<div class="flex-1">
		<div class="text-grey">
			<span>Contacts</span>
			<i class="fa-solid fa-caret-right"></i>
			<span class="text-grey">Countries</span>
			<i class="fa-solid fa-caret-right"></i>
			<span class="text-grey">Upload</span>
		</div>
	</div>
</div>
<!-- BreadCrumbs (END) -->


<div class="form-container">
	<h2 class="text-large">Upload Countries from Excel</h2>


	<form asp-controller="Countries" asp-action="UploadExcel" method="post" enctype="multipart/form-data">
		@*ExcelFile*@
		<div class="form-input flex">
			<div class="w-25">
				<label class="form-label pt">Choose an Excel (*.xlsx) file</label>
			</div>
			<div class="flex-1">
				<input type="file" name="excelFile" class="form-input" />
				<div class="text-red">@ViewBag.ErrorMessage</div>
				<div class="text-green">@ViewBag.Message</div>
			</div>
		</div>
		<div class="flex">
			<div class="w-25">
			</div>
			<div class="flex-1">
				<button type="submit" class="button button-blue-back">Upload</button>
			</div>
		</div>

	</form>
</div>